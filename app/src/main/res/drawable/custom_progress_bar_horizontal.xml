<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="#FF4081" /> <!-- Progress color -->
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="#F5F5F5" /> <!-- Secondary progress color -->
            </shape>
        </clip>
    </item>
    <item>
        <clip>
            <shape>
                <solid android:color="#E0E0E0" /> <!-- Background color -->
            </shape>
        </clip>
    </item>
</layer-list>
